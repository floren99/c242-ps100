<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/colorBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp">

        <ImageView
            android:id="@+id/shape1"
            android:layout_width="261dp"
            android:layout_height="350dp"
            android:src="@drawable/shape1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="-90dp"
            android:layout_marginStart="200dp" />

        <ImageView
            android:id="@+id/shape2"
            android:layout_width="258dp"
            android:layout_height="350dp"
            android:src="@drawable/shape1"
            app:layout_constraintTop_toBottomOf="@+id/shape1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="120dp"
            android:layout_marginStart="-100dp"/>

        <ImageView
            android:id="@+id/shape3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/shape1"
            app:layout_constraintTop_toBottomOf="@+id/shape1"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="320dp"
            android:layout_marginEnd="-20dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="16dp"
            android:layout_marginHorizontal="16dp"
            android:backgroundTint="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginVertical="16dp">

            <TextView
                android:id="@+id/test_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"
                android:text="@string/take_the_test"
                android:textColor="@color/colorOnPrimary"
                android:textSize="16sp"
                android:fontFamily="@font/poppins_regular"
                android:paddingHorizontal="32dp"
                android:paddingVertical="8dp"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textAlignment="center"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="16dp"
            android:backgroundTint="@color/colorSurface"
            app:layout_constraintTop_toBottomOf="@id/cardViewTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_baseline_test_24"
                        android:contentDescription="@string/icon_description" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/value_input"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="@color/colorOnPrimary" />

                        <TextView
                            android:id="@+id/done1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/done"
                            android:textColor="@color/gray" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/buttonInputNilai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorSecondary"
                        android:textColor="@color/colorOnSecondary"
                        android:text="@string/input" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_baseline_test_24"
                        android:contentDescription="@string/icon_description" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/quiz_1"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="@color/colorOnPrimary" />

                        <TextView
                            android:id="@+id/done2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/done"
                            android:textColor="@color/gray" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/quizBtn1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorSecondary"
                        android:textColor="@color/colorOnSecondary"
                        android:text="@string/take" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_baseline_test_24"
                        android:contentDescription="@string/icon_description" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/quiz_2"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="@color/colorOnPrimary" />

                        <TextView
                            android:id="@+id/done3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/done"
                            android:textColor="@color/gray" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/quizBtn2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorSecondary"
                        android:textColor="@color/colorOnSecondary"
                        android:text="@string/take" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_baseline_test_24"
                        android:contentDescription="@string/icon_description" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/quiz_3"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="@color/colorOnPrimary" />

                        <TextView
                            android:id="@+id/done4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/done"
                            android:textColor="@color/gray" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/quizBtn3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorSecondary"
                        android:textColor="@color/colorOnSecondary"
                        android:text="@string/take" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_baseline_test_24"
                        android:contentDescription="@string/icon_description" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/quiz_4"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="@color/colorOnPrimary" />

                        <TextView
                            android:id="@+id/done5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/done"
                            android:textColor="@color/gray" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/quizBtn4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorSecondary"
                        android:textColor="@color/colorOnSecondary"
                        android:text="@string/take" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_baseline_test_24"
                        android:contentDescription="@string/icon_description" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/interest"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="@color/colorOnPrimary" />

                        <TextView
                            android:id="@+id/done6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/done"
                            android:textColor="@color/gray" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/buttonInputMinat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorSecondary"
                        android:textColor="@color/colorOnSecondary"
                        android:text="@string/fill" />
                </LinearLayout>
                <Button
                    android:id="@+id/btnHistory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/history"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginTop="4dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/colorPrimary2"
                    android:textColor="@color/colorOnPrimary"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/button_cek"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/check_results"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            android:backgroundTint="@color/colorPrimaryVariant"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/cardView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
