<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/colorBackground"
    tools:context=".view.welcome.SplashActivity">

    <ImageView
        android:id="@+id/logoSplash"
        android:layout_width="216dp"
        android:layout_height="216dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:alpha="0"
        tools:alpha="100"
        android:src="@drawable/logo_app2"/>

    <View
        android:id="@+id/lines1"
        android:layout_width="140dp"
        android:layout_height="7dp"
        android:background="@color/colorPrimary2"
        android:rotation="-45"
        app:layout_constraintBottom_toTopOf="@+id/logoSplash"
        app:layout_constraintEnd_toStartOf="@+id/logoSplash"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/lines2"
        android:layout_width="140dp"
        android:layout_height="7dp"
        android:background="@color/colorPrimary"
        android:rotation="-45"
        app:layout_constraintBottom_toTopOf="@+id/lines1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/lines3"
        android:layout_width="140dp"
        android:layout_height="7dp"
        android:background="@color/colorPrimary2"
        android:rotation="-45"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/logoSplash"
        app:layout_constraintTop_toBottomOf="@+id/logoSplash" />

    <View
        android:id="@+id/lines4"
        android:layout_width="140dp"
        android:layout_height="7dp"
        android:background="@color/colorPrimary"
        android:rotation="-45"
        app:layout_constraintTop_toBottomOf="@+id/lines3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
