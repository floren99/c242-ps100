<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".view.dashboard.path.DetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/tv_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/iv_detail_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/circle_shape"
                android:contentDescription="@string/profile_picture"
                android:transitionName="shared_image"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_baseline_android_24" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="28dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="28dp">

                <TextView
                    android:id="@+id/tv_detail_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorOnPrimary"
                    android:text="@string/title_path"
                    android:textSize="20sp"
                    android:transitionName="shared_name"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/colorOnPrimary"/>
            </LinearLayout>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/containerAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="8dp"
            android:backgroundTint="@color/colorBackground"
            app:layout_constraintTop_toBottomOf="@id/tv_header">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="8dp"
                    android:backgroundTint="@color/colorSurface">

                    <TextView
                        android:id="@+id/tv_detail_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/colorOnPrimary"
                        android:justificationMode="inter_word"
                        android:padding="16dp"
                        android:text="@string/Lorem" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="8dp"
                    android:backgroundTint="@color/colorSurface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingVertical="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="16dp"
                            android:textSize="15sp"
                            android:fontFamily="@font/poppins_italic"
                            android:textColor="@color/colorOnPrimary"
                            android:text="@string/skill_needed" />

                        <TextView
                            android:id="@+id/tv_detail_skill"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorOnPrimary"
                            android:fontFamily="@font/poppins_regular"
                            android:paddingHorizontal="16dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="4dp"
                            android:text="@string/list_abc" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="8dp"
                    android:backgroundTint="@color/colorSurface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="16dp"
                            android:textSize="15sp"
                            android:fontFamily="@font/poppins_italic"
                            android:textColor="@color/colorOnPrimary"
                            android:text="@string/universitas" />

                        <TextView
                            android:id="@+id/tv_detail_universitas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorOnPrimary"
                            android:fontFamily="@font/poppins_regular"
                            android:paddingHorizontal="16dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="4dp"
                            android:text="@string/list_abc" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="8dp"
                    android:backgroundTint="@color/colorSurface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingVertical="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="16dp"
                            android:textSize="15sp"
                            android:fontFamily="@font/poppins_italic"
                            android:textColor="@color/colorOnPrimary"
                            android:text="@string/career_jobs" />

                        <TextView
                            android:id="@+id/tv_detail_career"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorOnPrimary"
                            android:fontFamily="@font/poppins_regular"
                            android:paddingHorizontal="16dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="4dp"
                            android:text="@string/list_abc" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="8dp"
                    android:backgroundTint="@color/colorSurface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingVertical="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_italic"
                            android:paddingHorizontal="16dp"
                            android:textSize="15sp"
                            android:textColor="@color/colorOnPrimary"
                            android:text="@string/article" />

                        <TextView
                            android:id="@+id/tv_detail_article"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textIsSelectable="true"
                            android:textColor="@color/colorOnPrimary"
                            android:fontFamily="@font/poppins_regular"
                            android:paddingHorizontal="16dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="4dp"
                            android:text="@string/list_abc" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="8dp"
                    android:backgroundTint="@color/colorSurface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingVertical="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="16dp"
                            android:textSize="15sp"
                            android:fontFamily="@font/poppins_italic"
                            android:textColor="@color/colorOnPrimary"
                            android:text="@string/tips" />

                        <TextView
                            android:id="@+id/tv_detail_tips"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorOnPrimary"
                            android:fontFamily="@font/poppins_regular"
                            android:paddingHorizontal="16dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="4dp"
                            android:text="@string/list_abc" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
