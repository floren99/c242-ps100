<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/colorBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp">

        <ImageView
            android:id="@+id/shape1"
            android:layout_width="261dp"
            android:layout_height="350dp"
            android:src="@drawable/shape1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="-90dp"
            android:layout_marginStart="200dp" />

        <ImageView
            android:id="@+id/shape2"
            android:layout_width="258dp"
            android:layout_height="350dp"
            android:src="@drawable/shape1"
            app:layout_constraintTop_toBottomOf="@+id/shape1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="120dp"
            android:layout_marginStart="-100dp"/>

        <ImageView
            android:id="@+id/shape3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/shape1"
            app:layout_constraintTop_toBottomOf="@+id/shape1"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="320dp"
            android:layout_marginEnd="-20dp"/>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/cat_menu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.072"
            app:layout_constraintStart_toEndOf="@+id/rekom"
            app:layout_constraintTop_toBottomOf="@+id/cv_profilemenu"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/menu_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@color/invisible"
            android:backgroundTint="@color/invisible"
            android:drawableTop="@drawable/ic_menu_black_24dp"
            android:elevation="4dp"
            android:gravity="center"
            android:paddingTop="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_logo_home"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/logo_app2"
            android:background="@drawable/circle_shape"
            android:scaleType="centerInside"
            android:clipToOutline="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="22dp"
            android:fontFamily="@font/poppins_regular"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:text="@string/welcome"
            android:textColor="@color/colorOnSurface"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/menu_button"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/rekom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/poppins_regular"
            android:paddingStart="20dp"
            android:paddingEnd="4dp"
            android:text="@string/popular_majors"
            android:textColor="@color/colorOnSurface"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/cv_profilemenu"
            app:layout_constraintStart_toStartOf="parent"/>

        <LinearLayout
            android:id="@+id/cat_menu"
            android:layout_width="0dp"
            android:layout_height="175dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rekom">

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_popularPathHome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp">
                <View
                    android:layout_width="377dp"
                    android:layout_height="16dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/shape3"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/img_path1"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/lg_teknik_sipil"
                        android:background="@drawable/circular_background"
                        android:padding="10dp" />
                    <TextView
                        android:id="@+id/text_img_path1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/civil_engineering"
                        android:textSize="12sp"
                        android:textColor="@color/colorOnPrimary"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginHorizontal="8dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp">

                <View
                    android:layout_width="377dp"
                    android:layout_height="16dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/shape3"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/img_path2"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/lg_keperawatan"
                        android:background="@drawable/circular_background"
                        android:padding="10dp" />

                    <TextView
                        android:id="@+id/text_img_path2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/nursing"
                        android:textSize="12sp"
                        android:textColor="@color/colorOnPrimary"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp">
                <View
                    android:layout_width="377dp"
                    android:layout_height="16dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/shape3" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/img_path3"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/lg_ilmu_komputer"
                        android:background="@drawable/circular_background"
                        android:padding="10dp" />

                    <TextView
                        android:id="@+id/text_img_path3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/computer_science"
                        android:textSize="12sp"
                        android:textAlignment="center"
                        android:textColor="@color/colorOnPrimary"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <TextView
            android:id="@+id/home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/poppins_bold"
            android:paddingStart="20dp"
            android:paddingEnd="4dp"
            android:text="@string/app_name"
            android:textColor="@color/colorOnSurface"
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@id/welcome_text"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_profilemenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintTop_toBottomOf="@id/home_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardCornerRadius="8dp"
            android:backgroundTint="@color/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="16dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:contentDescription="@string/profile_picture"
                    android:src="@drawable/mmm_dashboard" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/usernameHome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="@string/username"
                        android:textColor="@color/colorOnBackground"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_light"
                        android:text="@string/sub_text"
                        android:textColor="@color/colorOnBackground"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/circle_button"
                    android:layout_gravity="center_vertical|end"
                    android:contentDescription="Arrow Icon"
                    android:src="@drawable/ic_keyboard_arrow_right_24" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/description_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="25dp"
            android:fontFamily="@font/poppins_mediumitalic"
            android:lineSpacingExtra="2dp"
            android:text="@string/lets_find"
            android:textColor="@color/colorOnSurface"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/recyclerView"
            tools:ignore="MissingConstraints"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cat_menu" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>